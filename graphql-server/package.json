    "graphql-import": "0.7.1",
    "graphql-import-node": "0.0.1",
    "ts-node": "8.0.2",
    "typescript": "3.3.3"
  },
  "dependencies": {
    "apollo-server": "^2.25.3",
    "firebase": "^7.15.0",
